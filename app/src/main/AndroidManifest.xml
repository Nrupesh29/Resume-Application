<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nrupeshpatel.resume">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EducationActivity"
            android:label="Education"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ExperienceActivity"
            android:label="Experience"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ProjectsActivity"
            android:label="Projects"
            android:theme="@style/AppTheme" />
        <activity android:name=".ProjectDetailActivity"></activity>
    </application>

</manifest>